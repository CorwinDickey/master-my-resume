<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/head.ejs') %>
    <title>Master My Resume</title>
</head>
<nav>
    <%- include ('./partials/nav.ejs') %>
</nav>
<body>
    <div class="item-cards">
        <div class="card add">
            <div class="circle plus"></div>
            <p>ADD NEW ITEM</p>
        </div>
        <% for (sectionItem of sectionItems) { %>
            <div class="card item">
                <div class="info-container">
                    <p><%= sectionItem.title %> </p>
                </div>
                <div class="buttons-container">
                    <form action="">
                        <input type="submit" value="EDIT">
                    </form>
                    <form action="/section/<%= section.id %>/item/<%= sectionItem._id %>?_method=DELETE" method="POST">
                        <input type="submit" value="DELETE">
                    </form>
                </div>
            </div>
        <% } %>
    </div>
</body>
</html>